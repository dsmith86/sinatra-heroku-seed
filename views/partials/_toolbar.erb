<link href="/css/admin.css" rel="stylesheet" type="text/css" />

<div id="toolbar">
	<div>
		<% if @current_user.nil? %>
			Not logged in
		<% else %>
			<%= "Welcome, #{@current_user.username}!" %>
		<% end %>
	</div>


	<div>
		<% if @current_user.nil? %>
			<a href="<%= url_for(:auth, :login) %>">Login</a>
		<% else %>
			<a href="<%= url_for(:auth, :logout) %>">Logout</a>
		<% end %>
	</div>
</div>